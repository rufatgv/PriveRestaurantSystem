@model LoginVM
<form action="" method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <h3>Login</h3>
    <hr>
    <div class="col-lg-12">
        <!-- <label for="">Email Address</label> -->
        <br>
        <input  class="email formInp" asp-for="Email" placeholder="Email or Username" required />
    </div>
    <div class="col-lg-12">
        <!-- <label for="">Password</label> -->
        <br>
        <input class="password formInp" asp-for="Password" placeholder="Enter your Password" required />
        <!-- <label class="custom-control-label" for="rememberMe">Remember Me</label> -->
    </div>
    <div class=" row remmemberForgot">
        <div class="rememmbermeInp col-lg-6">
            <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="rememberMe">
            <label for="remmeberme">Remember me</label>
        </div>
        <a asp-controller="Account" asp-action="ResetPassword" class="forgotYourPassword col-lg-6">Forgot your password</a>
    </div>
    <button>Login</button>

</form>
@section Script{
    <partial name="_ValidationFormScriptPartial">
}

