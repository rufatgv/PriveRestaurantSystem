@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Admin Panel</title>
    <!-- loader-->
    <link href="~/manage/css/pace.min.css" rel="stylesheet" />
    <script src="~/manage/js/pace.min.js"></script>
    <!--favicon-->
    @*<link rel="icon" href="~/manage/images/favicon.ico" type="image/x-icon">*@
    <!-- simplebar CSS-->
    <link href="~/manage/plugins/simplebar/css/simplebar.css" rel="stylesheet" />
    <!-- Bootstrap core CSS-->
    <link href="~/manage/css/bootstrap.min.css" rel="stylesheet" />
    <!-- animate CSS-->
    <link href="~/manage/css/animate.css" rel="stylesheet" type="text/css" />
    <!-- Icons CSS-->
    <link href="~/manage/css/icons.css" rel="stylesheet" type="text/css" />
    <!-- Sidebar CSS-->
    <link href="~/manage/css/sidebar-menu.css" rel="stylesheet" />
    <!-- Custom Style-->
    <link href="~/manage/css/app-style.css" rel="stylesheet" />
    @*@RenderSection("Style", required: false)*@

</head>

<body class="bg-theme bg-theme2">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="logall" style="margin-top:93px">
                    <div class="card o-hidden border-0 shadow-lg">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                @*<div class="col-lg-6 d-none d-lg-block bg-login-image">
                                    <img src="~/assets/img/background/wel-bg.jpg" alt="Alternate Text" />
                                </div>*@
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                        </div>
                                        <form class="user" method="post">
                                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                            <div class="form-group">
                                                <input class="form-control form-control-user" asp-for="Email" placeholder="Enter Email Address...">
                                            </div>
                                            <div class="form-group">
                                                <input class="form-control form-control-user" asp-for="Password" placeholder="Password">
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    <input class="custom-control-input" asp-for="RememberMe">
                                                    <label class="custom-control-label" asp-for="RememberMe">
                                                    </label>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                                Login
                                            </button>
                                            <hr>
                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <a class="small" href="~/manage/forgot-password.html">Forgot Password?</a>
                                        </div>
                                        <div class="text-center">
                                            <a class="small" href="~/manage/register.html">Create an Account!</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <img class="loginback" style="width:380px; height:300px;" src="~/assets/img/logo/prive logo.png" alt="Alternate Text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/manage/js/jquery.min.js"></script>
    <script src="~/manage/js/popper.min.js"></script>
    <script src="~/manage/js/bootstrap.min.js"></script>

    <!-- simplebar js -->
    <script src="~/manage/plugins/simplebar/js/simplebar.js"></script>
    <!-- sidebar-menu js -->
    <script src="~/manage/js/sidebar-menu.js"></script>

    <!-- Custom scripts -->
    <script src="~/manage/js/app-script.js"></script>

</body>

</html>
