
@model AboutIntro
@{
    ViewData["Title"] = "Update";
}
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 h3 mb-4 text-gray-800">
                <h4>About Update</h4>
            </div>
            <div class="col-lg-12 mx-auto">
                <form method="post" enctype="multipart/form-data">
                    
                    <div class="form-group">
                        <label asp-for="Feature"></label>
                        <textarea class="form-control" asp-for="Feature" placeholder="Enter Feature"></textarea>
                        <span class="text-danger" asp-validation-for="Feature"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ImageFile"></label>
                        <input class="form-control" accept="image/jpeg" asp-for="ImageFile" placeholder="Enter MainImage">
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>




