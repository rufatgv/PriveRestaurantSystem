                        <li class="list-group-item">Last updated at : @Model.UpdatedAt</li>
                    </ul>
                    <div class="card-body">
                        <a asp-action="Update" asp-controller="aboutintro" asp-area="manage" asp-route-id="@Model.Id" class="btn btn-warning">Update</a>

                        @if (Model.IsDeleted)
                        {
            <a asp-action="Restore" asp-controller="aboutintro" asp-area="manage" asp-route-id="@Model.Id" class="btn btn-primary">Restore</a> }
        else
        {
<a asp-action="Delete" asp-controller="aboutintro" asp-area="manage" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>}
                        <a asp-action="index" asp-controller="aboutintro" asp-area="manage" class="btn btn-primary">Go to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




