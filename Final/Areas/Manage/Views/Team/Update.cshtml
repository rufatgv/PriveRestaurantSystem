
@model Team
@{
    ViewData["Title"] = "Update";
}

        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 h3 mb-4 text-gray-800">
                        <h1>Team Update</h1>
                    </div>
                    <div class="col-lg-12 mx-auto">
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input class="form-control" asp-for="Name" placeholder="Enter Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Position"></label>
                                <input class="form-control" asp-for="Position" placeholder="Enter position">
                                <span class="text-danger" asp-validation-for="Position"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageFile"></label>
                                <input class="form-control" accept="image/jpeg" asp-for="ImageFile" placeholder="Enter Image">
                                <span class="text-danger" asp-validation-for="ImageFile"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>



