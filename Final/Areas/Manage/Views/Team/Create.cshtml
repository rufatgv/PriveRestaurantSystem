
@model Team
@{ ViewData["Title"] = "Create"; }
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Create page</h6>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label asp-for="ImageFile" class="form-label"></label>
                                <input asp-for="ImageFile" class="form-control" accept="image/jpeg">
                                <span class="text-danger" asp-validation-for="ImageFile"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <textarea asp-for="Name" class="form-control"></textarea>
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Position" class="form-label"></label>
                                <input asp-for="Position" class="form-control">
                                <span class="text-danger" asp-validation-for="Position"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-action="Index" asp-controller="Team" class="btn btn-primary">Go to back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script
{
    <partial name="_ValidationFormScriptPartial">

}
